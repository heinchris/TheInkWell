<%= form_for [:admin, @coupon] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @coupon,
          :include_object_name => true
        } %>
  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest'  -%>
  </div>
  
  <div class='field'>
    <%= f.label :photo -%>
    <%= render :partial => "/shared/admin/image_picker", :locals => {
          :f => f,
          :field => :photo_id,
          :image => @coupon.photo,
          :toggle_image_display => false
        } %>
  
  <div class='field'>
    <%= f.label :description -%>
    <%= f.text_field :description  -%>
  </div>
  
  <div class='field'>
    <%= f.label :discount -%>
    <%= f.text_field :discount  -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.coupons.coupon'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @coupon.title)
              } %>
<% end -%>
