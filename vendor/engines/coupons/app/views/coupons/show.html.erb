<% content_for :body_content_title do %>
  <%= @coupon.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @coupon.title %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @coupon.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @coupon.description %>
    </p>
  </section>
  <section>
    <h1>Discount</h1>
    <p>
      <%=raw @coupon.discount %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="coupons">
      <% @coupons.each do |coupon| %>
        <li>
          <%= link_to coupon.title, coupon_path(coupon) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
